@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count= 1;
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-md-11 text-center">
            <h6 class="mb-5">Kategori Listesi</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori adı</th>
                            <th scope="col">Kategori durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var category in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@category.Name</td>
                                    <td>@category.status</td>
                                    <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No categories available.</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="#" class="btn btn-outline-info">Yeni kategori ekle</a>
            </div>
        </div>
        
    </div>
</div>

