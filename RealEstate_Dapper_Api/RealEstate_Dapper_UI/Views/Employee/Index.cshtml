@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 1;
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-md-11 text-center">
            <h6 class="mb-5">Personel Listesi</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Personel Fotoğrafı</th>
                            <th scope="col">Personel Adı</th>
                            <th scope="col">Personel unvanı</th>
                            <th scope="col">Personel numarası</th>
                            <th scope="col">Personel maili</th>
                            <th scope="col">Personel durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var employee in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@employee.imageUrl" alt="Alternate Text" style="height:50px;width:50px;object-fit:cover" /></td>
                                    <td>@employee.name</td>
                                    <td>@employee.title</td>
                                    <td>@employee.phone</td>
                                    <td>@employee.email</td>
                                    <td>@employee.status</td>
                                    <td><a href="/Employee/DeleteEmployee/@employee.id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/UpdateEmployee/@employee.id" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No categories available.</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Employee/AddEmployee" class="btn btn-outline-info">Yeni personel ekle</a>
            </div>
        </div>

    </div>
</div>

