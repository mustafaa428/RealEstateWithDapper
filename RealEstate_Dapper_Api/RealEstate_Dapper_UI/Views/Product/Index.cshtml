@model List<ResultProductWithCategoryNameDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 1;
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-md-11 text-center">
            <h6 class="mb-5">Ürün Listesi</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün görseli</th>
                            <th scope="col">Ürün başlığı</th>
                            <th scope="col">Ürün fiyatı</th>
                            <th scope="col">Şehir</th>
                            <th scope="col">Bölge</th>
                            <th scope="col">Adres</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Kategorisi</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var product in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@product.coverImageUrl" alt="Alternate Text" style="height:50px;width:50px;object-fit:cover" /></td>

                                    <td>@product.title</td>
                                    <td>@product.price</td>
                                    <td>@product.city</td>
                                    <td>@product.discrit</td>
                                    <td>@product.address</td>
                                    <td>@product.description</td>
                                    <td>@product.name</td>
                                    <td><a href="/Product/DeleteProduct/@product.id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@product.id" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No categories available.</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Product/AddProduct" class="btn btn-outline-info">Yeni Ürün ekle</a>
            </div>
        </div>

    </div>
</div>

