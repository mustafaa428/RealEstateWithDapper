@model List<ResultProductWithCategoryNameDto>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Ürünler</h3>
            </div>
            @if(Model != null && Model.Any())
            {
                @foreach(var item in Model)
                {
                    <div class="row pt-md-5 pt-4">
                <div class="col-lg-4 col-md-6">
                    <a href="property-single.html">
                        <div class="box16">
                            <div class="rentext-listing-category"><span>Satın al</span><span>Kirala</span></div>
                            <img class="img-fluid" src="@item.coverImageUrl" alt="">
                            <div class="box-content">
                                <h3 class="title">@item.price TL</h3>
                                <span class="post">@item.discrit - @item.city</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
                }
            }
            else
            {
                <p>Ürün bulunamadı</p>
            }
            
        </div>
    </div>
</section>